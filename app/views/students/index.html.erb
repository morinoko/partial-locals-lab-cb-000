<h1>Student Directory</h1>

<%= form_tag(students_path, method: 'GET') do %>
  <%= label_tag :search_query, "Search for a student" %>
  <%= text_field_tag :search_query %>

  <%= submit_tag "Go" %>
<% end %>

<% if params[:search_query] %>
  <h2>Search Results for "<%= params[:search_query] %>"</h2>
<% else %>
  <h2>All Students</h2>
<% end %>
<% @students.each do |student| %>
  <%= render partial: 'student', locals: { student: student } %>
<% end %>
